@using MyStore_Web.Models.ViewModels
@model SliderCreateViewModel
@{
    ViewData["Title"] = "ایجاد اسلاید جدید";
}

<div class="main-content font-size-13">
    <div class="tab__box">
        <div class="tab__items">
            <a asp-area="Admin" asp-controller="Sliders" asp-action="Index" class="tab__item">لیست اسلایدها</a>
            <a class="tab__item is-active">ایجاد اسلاید جدید</a>
        </div>
    </div>

    <div class="bg-white padding-30 border-radius-3">
        <form asp-area="Admin" asp-controller="Sliders" asp-action="Create" method="post" enctype="multipart/form-data" class="width-100">

            <div class="row margin-bottom-25">
                <div class="col-6">
                    <label asp-for="DiscountTitle" class="font-size-13 color-444"></label>
                    <input asp-for="DiscountTitle" class="text width-100" style="height:36px;" placeholder="مثلاً تخفیف تابستانه" />
                    <span asp-validation-for="DiscountTitle" class="text-error font-size-12"></span>
                </div>
                <div class="col-6">
                    <label asp-for="Title" class="font-size-13 color-444"></label>
                    <input asp-for="Title" class="text width-100" style="height:36px;" placeholder="عنوان اسلاید" />
                    <span asp-validation-for="Title" class="text-error font-size-12"></span>
                </div>
            </div>

            <div class="row margin-bottom-25">
                <div class="col-6">
                    <label asp-for="Startdate" class="font-size-13 color-444"></label>
                    <input asp-for="Startdate" type="date" class="text width-100" style="height:36px;" />
                    <span asp-validation-for="Startdate" class="text-error font-size-12"></span>
                </div>
                <div class="col-6">
                    <label asp-for="Enddate" class="font-size-13 color-444"></label>
                    <input asp-for="Enddate" type="date" class="text width-100" style="height:36px;" />
                    <span asp-validation-for="Enddate" class="text-error font-size-12"></span>
                </div>
            </div>

            <div class="row margin-bottom-25">
                <div class="col-6">
                    <label asp-for="ImageFile" class="font-size-13 color-444">تصویر اسلاید</label>
                    <div class="file-upload">
                        <div class="i-file-upload">
                            <span>انتخاب تصویر</span>
                            <input asp-for="ImageFile" type="file" />
                        </div>
                        <span asp-validation-for="ImageFile" class="text-error font-size-12"></span>
                    </div>
                </div>

                <div class="col-6">
                    <label class="font-size-13 color-444 d-block mb-10">وضعیت نمایش</label>

                    <div class="switch-box" style="display:flex; align-items:center; gap:15px; padding-right:20px;">
                        <input type="checkbox" id="switch-active" asp-for="IsActive" />

                        <label for="switch-active" class="switch-label">
                            <span class="switch-btn"></span>
                        </label>

                        <span id="switch-text" class="font-size-13 color-444">فعال</span>
                    </div>

                    <span asp-validation-for="IsActive" class="text-error font-size-12"></span>
                </div>
            </div>

            <div class="text-center margin-top-40">
                <button type="submit" class="btn btn-netcopy_net margin-left-10">ثبت اسلاید</button>
                <a asp-area="Admin" asp-controller="Sliders" asp-action="Index" class="btn bg-e2e2e2 color-444">بازگشت</a>
            </div>
        </form>
    </div>
</div>
