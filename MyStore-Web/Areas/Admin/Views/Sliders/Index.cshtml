<div class="main-content font-size-13">
    <div class="tab__box">
        <div class="tab__items">
            <a class="tab__item is-active" href="/Admin/Sliders/Index">لیست اسلاید ها</a>
            <a class="tab__item " asp-area="Admin" asp-controller="Sliders" asp-action="Create">ایجاد اسلاید جدید</a>

        </div>
    </div>
    <div class="table__box">
        <table class="table">

            <thead role="rowgroup">
                <tr role="row" class="title-row">
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().DiscountTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().ImageName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Startdate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Enddate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().IsActive)
                    </th>
                    <th>
                        عملیات
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr role="row" class="">
                    <td>
                        @Html.DisplayFor(modelItem => item.DiscountTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                            <a href="~/images/posts/@item.ImageName" >
                                <img src="~/images/posts/@item.ImageName"
                                     style="width:200px; height:100px; object-fit:cover; border-radius:5px;" />
                            </a>
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Startdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enddate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                            <a asp-area="Admin" asp-controller="Sliders" asp-action="Delete" asp-route-id="@item.SliderId" class="item-delete mlg-15" title="حذف"></a>
                       @*  <a href="" class="item-reject mlg-15" title="رد"></a>
                        <a href="" class="item-confirm mlg-15" title="تایید"></a> *@
                        <a asp-area="Admin" asp-controller="Sliders" asp-action="Edit"  asp-route-id="@item.SliderId" class="item-edit" title="ویرایش"></a>
                    </td>
                </tr>
               }


            </tbody>
        </table>
    </div>
</div>
