@using MyStore_Web.Models.ViewModels
@model List<SliderSimpleviewModel>

<div class="banner_section slide_medium shop_banner_slider staggered-animation-wrap">
    <div id="carouselExampleControls" class="carousel slide carousel-fade light_arrow" data-ride="carousel">
        <div class="carousel-inner">

            @{
                int index = 0;
            }

            @foreach (var item in Model)
            {
                <div class="carousel-item @(index == 0 ? "active" : "") background_bg"
                     style="background-image:url('/images/posts/@item.ImageName'); background-size:cover; background-position:center;">

                    <div class="banner_slide_content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-7 col-9">
                                    <div class="banner_content overflow-hidden">
                                        <h5 class="mb-3 staggered-animation font-weight-light"
                                            data-animation="slideInRight"
                                            data-animation-delay="0.5s">@item.DiscountTitle</h5>

                                        <h2 class="staggered-animation"
                                            data-animation="slideInRight"
                                            data-animation-delay="1s">@item.Title</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                index++;
            }

        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <i class="ion-chevron-left"></i>
        </a>

        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <i class="ion-chevron-right"></i>
        </a>

    </div>
</div>
